<div class = "container">
<%= render 'books/list', book: @book, user: @user %>

<div class = "col-lg-8">
    <h1>Users</h1>
    <table>
        <thead>
            <tr>
                <th>name</th>
                <th>image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td>写真</td>
                <td><%= link_to "show", user_path(user.id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>