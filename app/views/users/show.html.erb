<div class = "container">
  <%= render 'books/list', book: @book, user: @user %>

  <div class = "col-lg-8">
      <h1>Books</h1>
      <table>
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Body</th>
              </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= book.text %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
  </div>
</div>