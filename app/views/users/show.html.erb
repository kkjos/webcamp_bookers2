<div class = "container">
  <%= render 'books/list', book: @book, user: @user %>

  <div class = "col-lg-8">
      <h1>Books</h1>
      <table>
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
              </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                <%= book.text %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
  </div>
</div>