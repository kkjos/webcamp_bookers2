  <div class = "row">
      <div class = "col-lg-4">
        <h1>User info</h1>
        <p>name:  user.name  </p>
        <p>introduction:  user.introduction </p>

        <h1>New book</h1>
          <%= form_with model: book, url: books_path, local: true do |f| %>
          <div>
            <%= f.label :title %><br />
            <%= f.text_field :title %>
          </div>
          <div>
            <%= f.label :opinion %><br />
            <%= f.text_area :body %>
          </div>
            <%= f.submit 'New Post', class: "btn btn-secondary" %>
          <% end %>
      </div>