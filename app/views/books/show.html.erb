<div class = "container">
  <%= render 'books/list', book: @new_book, user: @user %>

  <div class = "col-md-8">
      <h1>Book detail</h1>
      <table>
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan = "2"></th>
              </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <div><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></div>
                <div><%= @book.user.name %></div>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: 'Are You Sure?'}  %></td>
              <% end %>
            </tr>
          </tbody>
      </table>
  </div>
</div>