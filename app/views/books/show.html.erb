<div class = "container">
  <%= render 'books/list', book: @new_book, user: @user %>

  <div class = "col-lg-8">
      <h1>Books detail</h1>
      <table>
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan = "2"></th>
              </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <div><%= attachment_image_tag @book.user.profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></div>
                <div><%= @book.user.name %></div>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.text %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td><%= link_to "edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "destroy", book_path(@book.id), method: :delete, data: {confirm: 'Are You Sure?'}  %></td>
            </tr>
          </tbody>
      </table>
  </div>
</div>